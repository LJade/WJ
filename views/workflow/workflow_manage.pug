extends ../components/base
block title
    title 流程配置
block style
    link(rel='stylesheet', href=__CSS_PATH__ + '/news.css')
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'/workflow/workflow_manage',text:'流程配置'}]
    +asideNav(routerObj,0)
block main_content
    include ../components/mixin
    +RouteNav('流程配置')
    .condition
        .inline-group
            label(for='theme') 主题:
            select#theme
                option  新闻
                option  公告
                option  公文
                option  工单
                option  邮箱
                option  会议管理
        .inline-group
            label(for='date') 发布时间:
            input#date(type='text')
        .inline-group
            button.btn.btn-warning.btn-sm(type='button' style='margin-left:20px') 查询
            button.btn.btn-default.btn-sm(type='button' style='margin-left:20px' onclick="window.location.href='/workflow/workflow_create'") 新建
            button.btn.btn-default.btn-sm(type='button' style='margin-left:20px') 编辑
            button.btn.btn-default.btn-sm(type='button' style='margin-left:20px') 删除
    #inner-wrapper
        .content-list.section-block
            table.table.table-bordered
                thead
                    tr
                        td
                            input(type='checkbox')
                        td  模块名称
                        td  更新时间
                        td  更新人
                        td  排序
                        td  操作
                tbody
                    if(flowsList.length)
                        each flow in flowsList
                            tr
                                td
                                    input(type='checkbox')
                                td.link  #{flow.name}
                                td  #{flow.updateTime}
                                td  #{flow.updateName}
                                td  #{flow.sortNum}
                                td.link(onclick='window.location.href="/workflow/workflow_detail?id='+ flow.id + '"') 流程配置




