extends ../components/base
block title
    title 新闻阅览
block style
    link(rel='stylesheet', href='/public/stylesheets/news.css')
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'/news_list',text:'新闻查阅'},{link:'/news_manage',text:'新闻管理'},{link:'/news_create',text:'发布新闻'},{link:'/news_approve',text:'待我审批'}]
    +asideNav(routerObj,0)
block main_content
    include ../components/mixin
    +RouteNav('新闻查阅')
    #inner-wrapper
        #inner-content
            header.handle
            .container-fluid
                .row
                    .form-group.form-group-sm.col-lg-4.col-md-4.col-sm-6.col-xs-6
                        label.control-label(for='newsTheme') 主题:
                        input#newsTheme.form-control(type='text')
                    .form-group.form-group-sm.col-lg-4.col-md-4.col-sm-6.col-xs-6
                        label.control-label(for='newsState') 新闻状态:
                        select.form-control#newsState
                            option 未审批
                            option 已审批
                    .form-group.form-group-sm.col-lg-4.col-md-4.col-sm-6.col-xs-6
                        label.control-label(for='newsCreate') 发布时间:
                        input#newsCreate.form-control(type='time')
                .row
                    .col-lg-12.col-md-12.col-sm-12.col-xs-12
                        button.btn.btn-warning.btn-sm.pull-right(type='button' style='margin-left:20px') 删除
                        button.btn.btn-default.btn-sm.pull-right(type='button') 查询
            .container-fluid(style='margin-top:30px')
                table.table.table-bordered
                    thead
                        tr
                            td
                                input(type='checkbox')
                            td  标题
                            td  发布人
                            td  发布时间
                            td  新闻状态
                    tbody
                        tr
                            td
                                input(type='checkbox')
                            td  xxx
                            td  xxx
                            td  2017-12-01
                            td  已读
                        tr
                            td
                                input(type='checkbox')
                            td  xxx
                            td  xxx
                            td  2017-12-01
                            td  已读
            .container-fluid
                button.btn.btn-default.btn-sm(type='button') 分类管理





