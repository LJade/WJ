extends ../components/base
block title
    title 待我审批
block style
    link(rel='stylesheet', href=__CSS_PATH__ + '/news.css')
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'/news/news_list',text:'新闻查阅'},{link:'/news/news_manage',text:'新闻管理'},{link:'/news/news_category',text:'分类管理'},{link:'/news/news_create',text:'发布新闻'},{link:'#',text:'待我审批'}]
    +asideNav(routerObj,4)
block main_content
    include ../components/mixin
    +RouteNav('待我审批')
    .condition
        .inline-group
            label(for='newsTheme') 主题:
            input#newsTheme(type='text')
        .inline-group
            span(style='margin-right:10px') 新闻状态:
            input#unread(type='radio' name='read' checked style='margin-right:10px')
            label(for='unread' style='margin-right:25px') 未阅读
            input#read(type='radio' name='read' style='margin-right:10px')
            label(for='read') 已阅读
        .inline-group
            label(for='date') 发布时间:
            input#date(type='text')
        .inline-group
            button.btn.btn-warning.btn-sm(type='button' style='margin-left:20px') 查询
            button.btn.btn-default.btn-sm(type='button' style='margin-left:20px') 新建
            button.btn.btn-default.btn-sm(type='button') 删除
    #inner-wrapper
        .content-list.section-block
            table.table.table-bordered
                thead
                    tr
                        td
                            input(type='checkbox')
                        td  标题
                        td  发布人
                        td  新闻类型
                        td  发布时间
                        td  发布状态
                        td  操作
                tbody
                    if(newsList.length)
                        each news in newsList
                            tr
                                td
                                    input(type='checkbox')
                                td.link #{news.title}
                                td  #{news.publicName}
                                td  #{news.journalismTypeName}
                                td  #{news.publicTime}
                                td  #{news.approveStatus == 1 ? '已审核' : '未审核'}
                                if(news.approveStatus == 0)
                                    td.link  审核
block script
    script(type='text/javascript' src=__JS_PATH__ + '/news/notice_approve.js')
