extends ../components/base
block title
    title 待我审批
block style
    link(rel='stylesheet', href=__CSS_PATH__ + '/news.css')
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'/order/order_mine',text:'工单管理',icon:'icon-order'}]
    +asideNav(routerObj,0)
block main_content
    include ../components/mixin
    -var menuObj = [{link:'/order/order_create',text:'工单申请'},{link:'/order/order_approve',text:'待我审批'},{link:'/order/order_mine',text:'我的申请'}]
    +menuLink(menuObj,1)
    .condition
        .inline-group(style='margin:0')
            button.btn.btn-warning.btn-sm(type='button') 审批流程查阅
    #inner-wrapper
        .content-list.section-block
            table.table.table-bordered(border="1" cellspacing="0" style='border:1px solid #ececec;width:850px')
                tr
                    td.em.fixed-width 工单名称
                    td 我的病假申请
                    td.em.fixed-width 发布时间
                    td 2017-11-13
                tr
                    td.em.fixed-width 发布人
                    td(colspan='3') 芦苇
                tr
                    td.em.multi.fixed-width 发布内容
                    td.multi(colspan='3') 我生病了，要请假呀
                tr
                    td.em.fixed-width 审批人
                    td(colspan='3') 卢师傅
                tr
                    td.em.fixed-width 审批意见
                    td(colspan='3') 通过
            .content-bottom-handle
                button.btn.btn-default.btn-sm(type='button') 审批通过
                button.btn.btn-primary.btn-sm(type='button' style='margin-left:20px') 审批不通过







