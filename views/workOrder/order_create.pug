extends ../components/base
block title
    title 工单申请
block style
    link(rel='stylesheet', href=__CSS_PATH__ + '/news.css')
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'/order/order_mine',text:'工单管理',icon:'icon-order'}]
    +asideNav(routerObj,0)
block main_content
    include ../components/mixin
    -var menuObj = [{link:'#',text:'工单申请'},{link:'/order/order_approve',text:'待我审批'},{link:'/order/order_mine',text:'我的申请'}]
    +menuLink(menuObj,0)
    #inner-wrapper
        .news-create
            .form-control
                label.control-label(for='indexNumber') 索引号:
                input#indexNumber.form-control(type='text' value=orderDetail.indexNumber)
            .form-control
                label.control-label(for='informationType') 信息分类:
                select#informationType.form-control
                    option 请假
                    option 入职
                    option 签到
                    option 补录
            .form-control
                label.control-label(for='creator') 发布机构:
                input#creator.form-control(type='text' placeholder='默认当前部门')
            .form-control
                label.control-label(for='businessCreateTime') 生成日期:
                input#businessCreateTime.form-control(type='text' readonly value=orderDetail.businessCreateTime)
            .form-control
                label.control-label(for='takeEffectTime') 生效日期:
                input#takeEffectTime.form-control(type='text' readonly value=orderDetail.takeEffectTime)
            .form-control
                label.control-label(for='abolishTime') 废止日期:
                input#abolishTime.form-control(type='text' readonly value=orderDetail.abolishTime)
            .form-control
                label.control-label(for='informationName') 信息名称:
                input#informationName.form-control(type='text' value=orderDetail.informationName)
            .form-control
                label.control-label(for='detail') 内容概览:
                textarea#detail.form-control(rows=10 ) #{orderDetail.content}
            if(isEdit)
                .form-control.btn-wrapper
                    button#save_order.btn.btn-default.btn-sm(type='button') 发布
                    button.btn.btn-disable.btn-sm(type='button' style='margin-left:20px') 取消
block script
    script(type='text/javascript' src=__JS_PATH__ + '/order.js')







