extends ../components/base
block title
    title 添加桌面应用
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'/',text:'应用',icon:'icon-app'},{link:'/message',text:'消息',icon:'icon-message2'},{link:'/setting/user_manage',text:'平台管理',icon:'icon-setting'}]
    +asideNav(routerObj,0)
block common_header
    include ../components/header
    +commonheader(0)
block style
    link(rel='stylesheet', href=__CSS_PATH__ + '/news.css')
    style.
        #main-wrapper {
            margin-top: 10px;
        }
block main_content
    include ../components/mixin
    +RouteNav('桌面应用添加')
    #inner-wrapper
        .news-create
            .form-control
                label.col-sm-2.control-label(for='name') 应用名称
                input#name.form-control(type='text', placeholder='')
            .form-control
                label.col-sm-2.control-label(for='appName') 应用选择
                select.form-control#appName
                    option 1
                    option 2
                    option 3
                    option 4
                    option 5
            .form-control
                label.col-sm-2.control-label(for='icon') 图标上传
                input#icon(type='file')
            .form-control.btn-wrapper
                button.btn.btn-default.btn-sm(type='button' onclick="createApp();") 创建
                button.btn.btn-disable.btn-sm(type='button' onclick="history.go(-1);" style='margin-left:20px') 取消


