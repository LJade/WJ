extends ../components/base
block title
    title 发送邮件
block style
    link(rel='stylesheet', href=__CSS_PATH__ + '/news.css')
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'#',text:'发送邮件'},{link:'/mail/mail_send',text:'已发邮件'},{link:'/mail_receive',text:'已收邮件'}]
    +asideNav(routerObj,0)
block main_content
    include ../components/mixin
    include ../components/contact
    +RouteNav('发送邮件')
    #inner-wrapper
        .news-create
            .form-control
                label.control-label(for='approver') 接收人:
                input#approver.form-control(type='text' readonly placeholder='请选择')
                if(isEdit)
                    i.icon.icon-add#addUser
            .form-control
                label.control-label(for='title') 标题:
                input#title.form-control(type='text' value=mailDetail.title)
            .form-control
                label.control-label(for='creator') 发送人:
                input#creator.form-control(type='text' value=mailDetail.sendName)
            .form-control
                label.control-label(for='date') 发布日期:
                input#date.form-control(type='text' value=mailDetail.sendTime)
            .form-control
                label.control-label(for='detail') 发布内容:
                textarea#detail.form-control(rows=10 ) #{mailDetail.content}
            if(isEdit)
                .form-control
                    label.control-label(for='file') 上传附件:
                    input#file.form-control(type='file')
                    p 可以支持多个附件上传，附件总大小为20
                .form-control.btn-wrapper
                    input#sendMailId(type="hidden" value=sendMailId)
                    button#send_mail.btn.btn-default.btn-sm(type='button') 发送
                    button.btn.btn-disable.btn-sm(type='button' style='margin-left:20px') 取消
    if(isEdit)
        #modal(style='display:none')
            +ContactBook
block script
    script(src=__JS_PATH__ + "/mail.js" type="text/javascript")





