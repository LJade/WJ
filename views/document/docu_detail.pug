extends ../components/base
block title
    title 待我审核
block style
    link(rel='stylesheet', href=__CSS_PATH__ + '/news.css')
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'/docu/docu_list',text:'公文查阅'},{link:'/docu/docu_create',text:'公文发布'},{link:'/docu/docu_manage',text:'公文管理'},{link:'/docu/docu_approve',text:'待我审核'}]
    +asideNav(routerObj,3)
block main_content
    include ../components/mixin
    +RouteNav('审批')
    .condition
        .inline-group(style='margin:0')
            button.btn.btn-warning.btn-sm(type='button' onclick="window.open('/workflow/workflow_config?id=" + approveInfo.flowApproveUserId + "')") 审批流程查阅
    #inner-wrapper
        .content-list.section-block
            table.table.table-bordered(border="1" cellspacing="0" style='border:1px solid #ececec;width:750px')
                tr
                    td.em.fixed-width 公文名称
                    td #{approveInfo.title}
                    td.em.fixed-width 发布时间
                    td #{approveInfo.publicTime}
                tr
                    td.em.fixed-width 发布人
                    td(colspan='3') #{approveInfo.publicName}
                tr
                    td.em.multi.fixed-width 发布内容
                    td.multi(colspan='3') #{approveInfo.content}
                tr
                    td.em.multi.fixed-width 其他审批意见
                    td.multi(colspan='3')
                tr
                    td.em.fixed-width 审批意见
                    td(colspan='3')
                        input#option(type="text" value="" placeholder="请在这里填写您的审批意见" style="border：none;border:none;width:400px" autofocus)
            .content-bottom-handle
                input#flowApproveUserId(type="hidden" value=approveInfo.flowApproveUserId)
                button.btn.btn-default.btn-sm(type='button' onclick="approveSend(1);") 审批通过
                button.btn.btn-primary.btn-sm(type='button' onclick="approveSend(0);" style='margin-left:20px') 审批不通过





