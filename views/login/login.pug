extends loginLayout
block title
    title 欢迎登录
block box
    .login-page
        .panel
            .panel-heading
                h2.panel-title 登录
                    span 使用手机APP扫码登录或账号密码登录
            .panel-body.clearfix
                .binary-code
                    img(src='/login/qrCode')
                form(action="/doLogin", method="POST").login-container
                    .form-group.form-input
                        label(for='loginUser')
                            i.icon.icon-user
                        input#loginUser.form-control(type='text' name='account' placeholder='账号或手机号' required)
                    .form-group.form-input
                        label(for='loginPass')
                            i.icon.icon-lock
                        input#loginPass.form-control(type='password' name='pwd' placeholder='密码' required)
                    .form-group.form-check
                        input#rememberPass.form-control(type='checkbox')
                        label.control-label(for='rememberPass') 记住密码
                    .form-group.no-padding
                        button.btn.btn-default.btn-block(type='submit') 登录
                    #router-link
                        a(href="/register") 新用户注册
                        a(href="/find_pass") 忘记密码
block script
    script(src=__PLUGINS_PATH__ + "/jquery-2.1.4/jquery.cookie.js")
    script(src=__JS_PATH__ + "/login.js")