extends loginLayout
block title
    title 欢迎登录
block box
    .admin-login
        .panel.fixed-width-panel
            .panel-heading
                h2.panel-title 统一账号登录
            .panel-body
                form(action="/doLogin" method="post")
                    .form-group.form-input
                        label(for='loginUser')
                            i.icon.icon-user
                        input#loginUser.form-control(type='text' placeholder='账号或手机号' required)
                    .form-group.form-input
                        label(for='loginPass')
                            i.icon.icon-lock
                        input#loginPass.form-control(type='password' placeholder='密码' required)
                    .form-group.form-input
                        label(for='checkCode')
                            i.icon.icon-safe
                        input#checkCode.form-control(type='text' placeholder='验证码')
                    .form-group
                        button.btn.btn-default.btn-lg.btn-block(type='submit') 登录
