extends ../components/base
block title
    title 会议纪要
block style
    link(rel='stylesheet', href=__CSS_PATH__ + '/news.css')
block aside_content
    include ../components/mixin
    -var routerObj = [{link:'/conference/con_room',text:'会议室维护'},{link:'/conference/con_apply',text:'会议申请'},{link:'/conference/con_approve',text:'待我审批'},{link:'/conference/con_summary',text:'会议纪要'},{link:'/conference/con_history',text:'历史会议'},{link:'/conference/con_sign',text:'会议签到情况'}]
    +asideNav(routerObj,3)
block main_content
    include ../components/mixin
    +RouteNav('会议纪要')
    #inner-wrapper
        .news-create
            .form-control
                label.control-label(for='topic') 会议主题:
                input#topic.form-control(type='text')
            .form-control
                label.control-label(for='start') 开始时间:
                input#start.form-control(type='date')
            .form-control
                label.control-label(for='end') 结束时间:
                input#end.form-control(type='date')
            .form-control
                label.control-label(for='creator') 会议发起人:
                input#creator.form-control(type='text')
            .form-control
                label.control-label(for='participation') 与会人员:
                input#participation.form-control(type='text')
            .form-control
                label.control-label(for='detail') 会议内容:
                textarea#detail.form-control(rows=10)
            .form-control.btn-wrapper
                button.btn.btn-default.btn-sm(type='button') 保存
                button.btn.btn-disable.btn-sm(type='button' onclick="history.go(-1);" style='margin-left:20px') 取消





