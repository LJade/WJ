mixin treeShowCheck(moduleType)
    block script
        script(type='text/javascript' src=__PLUGINS_PATH__ + '/ztree/jquery.ztree.all.min.js')
        script(type='text/javascript' src= __JS_PATH__ + '/setting.js')
        script(type='text/javascript').
            if ($('#edit').val === 'false') {
                $('input').attr("readOnly", "readOnly")
            }
        script(type='text/javascript').
            function zTreeLoad() {
                var zTree;
                var setting = {
                    check: {
                        enable: true
                    },
                    view: {
                        dblClickExpand: false,
                        showLine: true,
                        selectedMulti: false
                    },
                    data: {
                        key: {
                            name: "label"
                        },
                        simpleData: {
                            enable: true,
                            name: "label",
                            title: "label",
                            idKey: "id",
                            pIdKey: "parentId",
                            rootPId: ""
                        }
                    },
                    callback: {
                        beforeDblClick: beforeMouseDoubleClick,
                        onClick: beforeMouseDown,
                        onCheck: checkEvent
                    }
                };

                var zNodes = JSON.parse($('#tree').attr('data-node'));
                var stringChecked = $('#deptIds').val();
                var checkedIds = stringChecked === "" ? [] : stringChecked.split(",");
                zNodes.forEach(function (node) {
                    node.open = true;
                    var index = $.inArray(String(node.id), checkedIds);
                    if (index !== -1) {
                        node.checked = true
                    }
                })

                function checkEvent(e, treeId, treeNode) {
                    var stringChecked = $('#deptIds').val();
                    var checkedIds = stringChecked === "" ? [] : stringChecked.split(",");
                    var index = $.inArray(String(treeNode.id), checkedIds)
                    if (treeNode.checked === false) {
                        if (index !== -1) {
                            checkedIds.splice(index, 1);
                        }
                    } else {
                        if (index === -1) {
                            checkedIds.push(String(treeNode.id))
                        }
                    }
                    $("#deptIds").val(String(checkedIds));
                }

                function setCheck() {
                    var zTree = $.fn.zTree.getZTreeObj('tree');
                    type = {"Y": "", "N": ""}
                    zTree.setting.check.chkboxType = type;
                }

                function beforeMouseDown(e, treeId, treeNode) {
                    $('#tree').attr('data-cur-id', treeNode.id).attr('data-cur-pid', treeNode.parentId);
                }

                function beforeMouseDoubleClick(treeId, treeNode) {
                    var zTree = $.fn.zTree.getZTreeObj("tree");
                    if (treeNode.isParent) {
                        zTree.expandNode(treeNode);
                        return false;
                    } else {
                        return true;
                    }
                }

                $(document).ready(function () {
                    var t = $("#tree");
                    t = $.fn.zTree.init(t, setting, zNodes);
                    setCheck();
                });
            }
            zTreeLoad();
            //权限保存逻辑
            if($("#permissionSave").length){
                $("#permissionSave").on("click",function () {
                    var chooseRole = $('#chooseRole');
                    var roleId = chooseRole.val();
                    var modulesId = $('#deptIds').val();
                    var roleName = chooseRole.attr("data-name");
                    var roleUsers = chooseRole.attr("data-users");
                    var goBack = function () {
                        window.location.href = '/setting/role_manage';
                    }
                    $.post("/setting/role_save",{id:roleId,name:roleName,usersId:roleUsers,moduleIds:modulesId},function (data) {
                        if (data.code === 1) {
                            layerAlert("操作成功！！", 'ok', goBack);
                        } else {
                            layerAlert(data.msg, 'error');
                        }
                    },'json');
                });
            }





